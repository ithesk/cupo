<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_repair" xml:space="preserve">

    <t t-name="RepairNumberPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-confirm" style="text-align: center; padding: 20px;">
                <div class="popup-body">
                    <h1 style="font-size: 24px; margin-bottom: 20px;">Ingresar Número de Reparación</h1>
                    <class class="input-group" style="margin-bottom: 20px;">
                        <input type="text" id="repair_number" placeholder="Número de Reparación" style="width: 80%; padding: 10px; font-size: 18px;"/>
                    </class>
                    <button type="button" class="button confirm" style="padding: 10px 20px; font-size: 18px; background-color: #008CBA; border: none; color: white; border-radius: 5px;" t-on-click="click_confirm">Confirmar</button>
                    <button type="button" class="button cancel" style="padding: 10px 20px; font-size: 18px; background-color: #008CBA; border: none; color: white; border-radius: 5px;" t-on-click="click_cancel">Cancel</button>
                </div>
            </div>
        </div>
    </t>

    <t t-name="RepairLinkButton">
        <button type="button" class="control-button" id="link_repair_button" style="background-color: #008CBA; color: white;">
            Link Repair
        </button>
    </t>

</templates>